{
    "manifest_version": 2,
    "name": "Checkpoint",
    "version": "0.0.1",
    "icons": {
      "16": "assets/icons/favicon-16.png",
      "32": "assets/icons/favicon-32.png",
      "48": "assets/icons/favicon-48.png",
      "128": "assets/icons/favicon-128.png"
    },
  
    "description": "Adds a small nudge to help you kick off compulsive visits to certain websites.",
    "homepage_url": "https://github.com/Josde/Checkpoint",
    "short_name": "Checkpoint",
    
    "permissions": [
      "activeTab",
      "storage",
      "http://*/*",
      "https://*/*"
    ],

    "options_ui": {
      "page": "options.html",
      "browser_style": true
    },
  
    "background": {
      "scripts": [
        "background.js"
      ]
    },
    "browser_specific_settings": {
      "gecko": {
        "id": "checkpoint@josde.me"
      }
    }
    
    
  }